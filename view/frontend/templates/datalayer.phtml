<script>
    require([
        'Space48Tracking'
    ], function(tracking){

        var customerSession = tracking.getCookie("customerSession");

        if (customerSession !== null) {
            customerSession = tracking.parseJson(customerSession);
            dataLayer.push(customerSession);
            tracking.delCookie("customerSession");
        }
    });
</script>
